CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school

CFLAGS = -Wall -Werror -Wextra -pedantic

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) -o $@ $(OBJ) $(CFLAGS)

%.o: %.c m.h
	$(CC) -c -o $@ $< $(CFLAGS)

clean:
	$(RM) *~ $(NAME)

oclean:
	$(RM) $(OBJ)

fclean: clean oclean
	$(RM) $(NAME)

re: fclean all
m.h:
	@echo "Error: m.h not found! Makefile cannot proceed."
	@exit 1

.PHONY: clean oclean fclean

.PHONY: re

